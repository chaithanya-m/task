<%= form_for(@user, url: update_privacy_user_path, method: :patch) do |form| %>
  <div class="form-group">
    <%= form.check_box :private, id: 'privateSwitch' %>
    <%= form.label :private,  for: 'privateSwitch'%>
  </div>  

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation  %>

  <%= form.submit 'Update ' %>
<% end %>
