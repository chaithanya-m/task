<% if user_signed_in? %>
  <div style="text-align: right;">
    <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete}%>
  </div>

  <br>
  <div type="button" class="btn ">
    <%= link_to "Add new task" ,new_task_path,class:("btn btn-primary") %>
  </div>  
  <div>
    <%= render 'home/list_of_tasks', tasks: @todo_tasks,task_type: "TODO" %>
    <%= render 'home/list_of_tasks', tasks: @completed_tasks,task_type: "DONE"  %>
  </div>
  <span> to change privacy settings</span> 
  <%= link_to 'Click here', edit_privacy_user_path(id:current_user.id) %> 
<% else %>
  <div style="text-align: right;">
    <div type="button" class="btn " >
      <%= link_to "Sing In" , new_user_session_path %>
    </div>
    <span> or </span>
    <div type="button" class="btn ">
      <%= link_to "Sing Up" , new_user_registration_path %> 
    </div>
  </div>
      
<% end %>
<hr>
<div>
  <h5> Pubick Tasks</h5>

    <%= render 'home/list_of_public_tasks', tasks: @public_todo_tasks, task_type: "TODO" %>
    <%= render 'home/list_of_public_tasks', tasks: @public_completed_tasks, task_type: "DONE" %>
</div>
